{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    // "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
  },
  "include": ["./src/**/*.ts", "globals.d.ts" /* masukin setiap file ts ke prod ;) */],
  "exclude": ["./node_modules" /* menolak folder di prod ;) */]
}